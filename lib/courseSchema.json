{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/root.json",
  "type": "object",
  "title": "The Course Schema",
  "required": [
    "name",
    "default_toolbox",
    "default_avatar_url"
  ],
  "properties": {
    "name": {
      "$id": "#/properties/name",
      "type": "string",
      "title": "The Name Schema",
      "default": "",
      "examples": [
        "sample"
      ],
      "pattern": "^(.*)$"
    },
    "default_toolbox": {
      "$id": "#/properties/default_toolbox",
      "type": "object",
      "title": "The Default toolbox",
      "required": [
        "categories"
      ],
      "properties": {
        "categories": {
          "$id": "#/properties/default_toolbox/properties/categories",
          "type": "array",
          "title": "Categories",
          "items": {
            "$id": "#/properties/default_toolbox/properties/categories/items",
            "type": "object",
            "title": "Category Schema",
            "required": [
              "name",
              "blocks"
            ],
            "properties": {
              "name": {
                "$id": "#/properties/default_toolbox/properties/categories/items/properties/name",
                "type": "string",
                "title": "Category Name",
                "default": "",
                "enum": [
                  "jett_actions",
                  "dog",
                  "bird",
                  "reptile",
                  "other"
                ],
                "pattern": "^(.*)$"
              },
              "blocks": {
                "$id": "#/properties/default_toolbox/properties/categories/items/properties/blocks",
                "type": "array",
                "title": "The Blocks Schema",
                "items": {
                  "$id": "#/properties/default_toolbox/properties/categories/items/properties/blocks/items",
                  "type": "string",
                  "title": "The Items Schema",
                  "default": "",
                  "examples": [
                    "robo_dance"
                  ],
                  "pattern": "^(.*)$"
                }
              }
            }
          }
        }
      }
    },
    "default_avatar_url": {
      "$id": "#/properties/default_avatar_url",
      "type": "string",
      "title": "The Default_avatar_url Schema",
      "default": "",
      "examples": [
        "default.com"
      ],
      "pattern": "^(.*)$"
    },
    "activities": {
      "$id": "#/properties/activities",
      "type": "array",
      "title": "The Activities Schema",
      "items": {
        "$id": "#/properties/activities/items",
        "type": "object",
        "title": "The Items Schema",
        "required": [
          "name",
          "special_label",
          "avatar_url",
          "toolbox"
        ],
        "properties": {
          "name": {
            "$id": "#/properties/activities/items/properties/name",
            "type": "string",
            "title": "The Name Schema",
            "default": "",
            "examples": [
              "default_name"
            ],
            "pattern": "^(.*)$"
          },
          "special_label": {
            "$id": "#/properties/activities/items/properties/special_label",
            "type": "string",
            "title": "The Special_label Schema",
            "default": "",
            "examples": [
              "midcourse"
            ],
            "pattern": "^(.*)$"
          },
          "avatar_url": {
            "$id": "#/properties/activities/items/properties/avatar_url",
            "type": "string",
            "title": "The Avatar_url Schema",
            "default": "",
            "examples": [
              "avatarURL"
            ],
            "pattern": "^(.*)$"
          },
          "toolbox": {
            "$id": "#/properties/activities/items/properties/toolbox",
            "type": "object",
            "title": "The Toolbox Schema"
          }
        }
      }
    }
  }
}
